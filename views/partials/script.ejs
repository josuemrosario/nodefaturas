<script
  type="text/javascript"
  src="https://cdn.jsdelivr.net/npm/toastify-js"
></script>

<% if (typeof info !== 'undefined') { %>
<script>
  const bgColors = {
    error: "#EF4B53",
    success: "#00B5FF",
  };
  Toastify({
    text: "<%= info.mensagem %>",
    duration: 3000,
    gravity: "bottom",
    position: "right",
    offset: {
      x: 0,
      y: 0,
    },
    style: {
      background: bgColors["<%= info.type %>"],
    },
  }).showToast();
</script>
<% } %>
